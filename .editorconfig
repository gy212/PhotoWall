# EditorConfig is awesome: https://EditorConfig.org

root = true

[*]
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf

# TypeScript/JavaScript/React
[*.{ts,tsx,js,jsx}]
indent_style = space
indent_size = 2
max_line_length = 100

# Rust
[*.rs]
indent_style = space
indent_size = 4
max_line_length = 100

# JSON/YAML
[*.{json,yaml,yml}]
indent_size = 2

# HTML/CSS
[*.{html,css}]
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false
